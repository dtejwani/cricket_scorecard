<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/team_a"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:background="#0081CF"
        android:text="Team-A"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/teama_score"
        android:textColor="#000000"
        android:layout_marginLeft="270dp"
        android:text="0-0"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 run"
        android:id="@+id/onerun"
        android:background="#845EC2"
        android:layout_marginTop="2dp"
        android:textColor="#FFFFFF"
        android:onClick="one_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 run"
        android:textColor="#FFFFFF"
        android:layout_marginTop="2dp"
        android:background="#845EC2"
        android:id="@+id/tworun"
        android:onClick="two_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="4 run"
        android:background="#845EC2"
        android:textColor="#FFFFFF"
        android:id="@+id/fourrun"
        android:onClick="four_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="6 run"
        android:textColor="#FFFFFF"
        android:background="#845EC2"
        android:id="@+id/sixrun"
        android:onClick="six_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Wicket"
        android:background="#845EC2"
        android:textColor="#FFFFFF"
        android:id="@+id/wicket"
        android:onClick="wicket_out"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/download2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="28dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:text="Team-B"
        android:background="#0081CF"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/teamb_score"
        android:layout_marginLeft="270dp"
        android:text="0-0"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 run"
        android:layout_marginTop="2dp"
        android:id="@+id/bonerun"
        android:textColor="#FFFFFF"
        android:background="#845EC2"
        android:onClick="bone_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 run"
        android:textColor="#FFFFFF"

        android:layout_marginTop="2dp"
        android:id="@+id/btworun"
        android:background="#845EC2"
        android:onClick="btwo_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 run"
        android:layout_marginTop="2dp"
        android:textColor="#FFFFFF"
        android:id="@+id/bfourrun"
        android:background="#845EC2"
        android:onClick="bfour_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 run"
        android:layout_marginTop="2dp"
        android:textColor="#FFFFFF"
        android:background="#845EC2"
        android:id="@+id/bsixrun"
        android:onClick="bsix_run"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wicket"
        android:layout_marginTop="2dp"
        android:id="@+id/bwicket"
        android:background="#845EC2"
        android:textColor="#FFFFFF"
        android:onClick="bwicket_out"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/world"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="18dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textSize="16sp"
        android:background="#845EC2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="4dp"
        android:onClick="reset_run"
        android:layout_marginLeft="150dp"/>

</LinearLayout>
